{
  "compilerOptions": {
    "jsx": "react-jsx",           // ✅ Importante para soportar JSX moderno
    "lib": ["DOM", "ESNext"],     // ✅ Necesario para JSX en el navegador
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["react", "react-dom"],
    "strict": true,
    "noEmit": true
  },
  "include": ["src"]
}
